<%= content_tag :div, data: {controller: 'home', action: 'keydown.esc->home#closeRequest'}, class: 'grid h-screen grid-rows-[auto_minmax(0,_1fr)]' do %>
  <div class="sticky top-0 z-10 flex items-center justify-between h-20 px-4 bg-yellow-300">
    <h1 class="text-2xl font-bold">Monitoring</h1>
  </div>

  <div class="relative flex overflow-x-hidden">
    <div class="w-full max-h-full overflow-y-auto">
      <div class="flex items-center gap-2">
        <h2 class="p-2 text-xl font-bold">Requests</h2>
        <%= button_to clear_requests_path do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-4 mt-2 hover:text-red-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
        <% end %>
      </div>

      <% @requests.each do |request| %>
        <%= link_to request_path(request.id), class: 'grid grid-cols-8 even:bg-zinc-200 p-2', data: {turbo_frame: :request} do %>
          <div><%= request.time.strftime("%H:%M:%S:%L") %></div>
          <div><%= request.meta[:method] %></div>
          <div class="col-span-2"><%= request.meta[:path].truncate(60) %></div>
          <div class="col-span-2"><%= request.meta[:controller] %></div>
          <div><%= request.meta[:action] %></div>
          <div><%= request.meta[:status] %></div>
        <% end %>
      <% end %>
    </div>
    <div class="absolute right-0 w-3/4 h-full p-8 transition-all translate-x-full bg-white shadow request-opened:translate-x-0">
      <span class="absolute cursor-pointer top-2 right-2" data-action="click->home#closeRequest">close</span>

      <%= turbo_frame_tag :request, data: {action: 'turbo:frame-load->home#openRequest'} %>
    </div>
  </div>
<% end %>
